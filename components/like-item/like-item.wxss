/* components/like-item/like-item.wxss */
.like-item-container {
  background: #fff;
  width: 300rpx;
  font-size: 14px;
  color: #999;
  height: 450rpx;
}
.like-item-info {
  position: relative;
  height: 80rpx;
  box-sizing: border-box;
}
.like-item-type {
  display: inline-block;
  background: #f5f5f5;
  padding: 0 20rpx;
  margin: 15rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 5rpx;
}
.like-item-img {
  width: 100%;
  height: 180rpx;
}
.like-item-des {
  padding: 20rpx;
  line-height: 20px;
}